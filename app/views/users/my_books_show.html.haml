= render partial: 'shared/header_1' 
.MypageHeader 
  %ul.content-list    
    = link_to my_page_user_path(current_user) do    
      %li.content-list__item
        マイページ
    = link_to new_book_path(current_user) do
      %li.content-list__item
        本を登録
    = link_to all_books_user_path(current_user) do
      %li.content-list__item
        マイブック
    = link_to genre_all_book_path(current_user) do    
      %li.content-list__item
        ジャンル
    = link_to evaluation_all_book_path(current_user) do
      %li.content-list__item
        ユーザー評価
    = link_to item_all_user_path(current_user) do
      %li.content-list__item
        読書媒体
.MyBooksShow
  .title-box_mbs
    .icon
      .fa.fa-book
    .content-title
      本の登録情報
  .form
    = form_for @book do |f|
      .registers-box
        .Left-side
          .Left-upper_form
            .image_box
              = link_to edit_book_path do
                = image_tag @book.image
          .title-form
            .title-line
              .title
                タイトル :
            .left-input_result
              = @book.title
          .publisher-form
            .title-line
              .title
                出版社 :
            .left-input_result
              = @book.publisher
          .author-form
            .title-line
              .title
                著者 :
            .left-input_result
              = @book.author
        .Right-side
          .upper-box_m
            .status-form
              .title-line
                .title
                  読書ステータス :
              .right-select_result
                = @book.status
            .genre-form
              .title-line
                .title
                  ジャンル :
              .right-select_result
                = @book.genre
          .middle-box_m
            .item-form
              .title-line
                .title
                  読書媒体 :
              .right-select_result
                = @book.item
            .buy_date-form
              .title-line
                .title
                  購入日 :
              .right-select_result
                = @book.buy_date
          .lower-box_m
            .evaluation-form
              .title-line
                .title
                  5段階評価 :
              .eva-select_result
                = @book.evaluation
            .memo-form_mbs
              .title-line
                .title
                  memo :
              .area_result_2
                = @book.memo
          .impression-form_mbs
            .title-line
              .title
                レビュー :
            .area_result
              = @book.impression    
          .btn-box_show
            = link_to "/books/#{@book.id}/edit", method: :get, class:"to-edit_btn" do
              %p.text
                編集画面へ
            = link_to "戻る", :back, class: 'back_btn'
  .to-comment_view
    = link_to book_path(@book), class:"to-comment_btn_" do
      コメント画面へ
    -# .to-comment_btn
    -#   = link_to book_path(@book) do
    -#     コメント画面へ
= render partial: 'shared/footer_1'  