= render partial: 'shared/header_3'

#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 〜アカウントの編集〜
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :nickname
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        = link_to books_path(current_user) do
          .actions
            = f.submit "Update", class: 'btn'
  .margin-bottom

= render partial: 'shared/footer_1'