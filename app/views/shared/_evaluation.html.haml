.MainDisplay
  .MainHeader
    .logo-box
      = link_to home_index_path(current_user) do
        Book Stock     
    %ul.conent-list
      .conent-list__item
        = link_to new_user_session_path do
          新規登録
      .conent-list__item
        = link_to user_session_path do
          ログイン  
      .conent-list__item
        = link_to edit_user_path(current_user) do
          アカウント編集
      .conent-list__item
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'log-out_btn'
      .conent-list__item
        = link_to user_session_path do
          アプリについて           

  .MainSecondHeader_ma
    .name-box_ma
      .user-name_ma
        = current_user.name
    .search-box_ma
      = form_tag(search_books_path, method: 'get') do
        = text_field_tag :keyword, '', placeholder: "本を検索する", class: "search-box_ma__input_ma" 
        = submit_tag '検索', class: "search-btn_ma" , name: nil

    .social-box_ma
      = link_to "https://www.facebook.com/", class: "social-btn social-btn__facebook" do
        = icon('fab', 'facebook-square',  class: "content__btn__icon")
        facebook
      = link_to "https://twitter.com/", class: "social-btn social-btn__twitter" do
        = icon('fab', 'twitter', class: "content__btn__icon")
        twitter
      = link_to "https://www.instagram.com/", class: "social-btn social-btn__instagram" do
        = icon('fab', 'instagram', class: "social-btn__icon")
        instagram

  .MainRegisters
    .Registers-box
      .contents-top
        .Registers-top
          .title
            .title__icon
              .fa.fa-book
            .title__name
              ユーザー評価別
          %ul.tag-box
            = link_to books_path(current_user) do
              %li.tag-box__left
                最新登録順
            = link_to evaluation_all_book_path(current_user) do
              %li.tag-box__center
                ⭐️ 評価別
            = link_to genre_all_book_path(current_user) do
              %li.tag-box__right
                ジャンル別
        .evaluation-box
          %ul.box-upper
            %li.star-list.eva-title
              登録ユーザー評価
            = link_to evaluation_five_book_path(current_user) do
              %li.star-list
                星５：⭐️⭐️⭐️⭐️⭐️
            = link_to evaluation_four_book_path(current_user) do
              %li.star-list
                星４：⭐️⭐️⭐️⭐️☆
          %ul.box-lower
            = link_to evaluation_three_book_path(current_user) do
              %li.star-list
                星３：⭐️⭐️⭐️☆☆
            = link_to evaluation_two_book_path(current_user) do
              %li.star-list
                星２：⭐️⭐️☆☆☆
            = link_to evaluation_one_book_path(current_user) do
              %li.star-list
                星１：⭐️☆☆☆☆
      .books-box
        - if @books.count == 0
          .book-none
            該当する本はありません
        - else
          - @books.each do |book|
            .book-list
              = link_to book_path(book) do
                .book-image
                  = image_tag book.image.to_s  
                  .book-genre-tag
                    = book.genre
                .book-title
                  = book.title
      .bottom-space_sea
        .pagenation
          = paginate(@books)
          
  .footer
    .logo
      Book Stock
    .sub
      Copyright &copy; Kazuki Kouno All rights reserved